                document.write("다음 버스는 "+(x-d.getMinutes()+20)+"분전.")
            }
            else if (d.getMinutes()<30) {
               document.write("다음 버스는 "+(y-d.getMinutes()+20)+"분전")
            }
            else {
                document.write("다음 버스는 "+(z-d.getMinutes()+20)+"분전")
                  }
                }
                  </script>
